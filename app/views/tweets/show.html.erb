<p id="notice"><%= notice %></p>


<br>
<div class= container>
  <p>
    <strong>origin:</strong>
    <% if @tweet.user_id  !=  @tweet.origin %>
      <%= @tweet.user %>
    <% else %>
        "Propio" 
    <% end %>
  </p>

  <p>
    <strong>Photo:</strong>
    <img src="<%= @tweet.user.profile_photo %>"width="60" height="60" class="rounded-circle mb-2">
  </p>

  <p>
    <strong>Name:</strong>
    <%= @tweet.user %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @tweet.content %>
  </p>

  <div class= container>
    <%= link_to like_tweet_path(@tweet), method: :put do %>
      <i class="fas fa-thumbs-up fa-x"></i>
      <%= @tweet.get_upvotes.size %>
    <% end %>
    <%= link_to dislike_tweet_path(@tweet), method: :put do %>
      <i class="fas fa-thumbs-down fa-x"></i>
      <%= @tweet.get_downvotes.size %>
    <% end %>
    <%= link_to   tweet_retweet_path(@tweet), method: :post do  %>
      <i class="fas fa-retweet"></i>
      <%= @tweet.share%>
    <% end %>
  </div>

  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Like Details
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
      <button class="dropdown-item" type="button">
        <% @tweet.get_upvotes.voters.each do |voter| %>
          <%= voter.username %>  
        <% end%>    
      </button>
    </div>
  </div>

  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      DisLike Details
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
      <button class="dropdown-item" type="button">
        <% @tweet.get_downvotes.voters.each do |voter| %>
          <%= voter.username %>  
        <% end%>    
      </button>
    </div>
  </div>
  <br>
  <%= link_to 'Edit', edit_tweet_path(@tweet) %> |
  <%= link_to 'Back', tweets_path %>
  
  
  
</div>